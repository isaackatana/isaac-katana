{
  "compilerOptions": {
    "target": "es6",                       // Set the ECMAScript target version
    "module": "commonjs",                  // Specify the module code generation
    "rootDir": "./src",                    // Specify the root directory of input files
    "outDir": "./dist",                    // Redirect output structure to the dist directory
    "strict": true,                        // Enable all strict type-checking options
    "esModuleInterop": true,               // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true                   // Skip type checking of declaration files
  },
  "include": ["src/**/*"],                 // Specify the files to include
  "exclude": ["node_modules", "**/*.spec.ts"] // Specify files to exclude
}
